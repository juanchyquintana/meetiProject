<main class="contenedor contenedor-formularios no-padding">
  <h1><%= nombrePagina %></h1>

  <form class="default-form" method="POST">
    <div class="campo">
      <label>Nombre</label>
      <input
        type="text"
        value="<%= grupo.nombre %>"
        name="nombre"
        placeholder="Nombre del Grupo"
      />
    </div>

    <div class="campo descripcion">
      <label>Descripción</label>
      <div class="contenedor-editor">
        <input
          type="hidden"
          value="<%= grupo.descripcion %>"
          id="x"
          name="descripcion"
        />
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="campo">
      <label>Categoria</label>
      <select name="categoriaId">
        <option value="" selected disabled>-- Elige una Categoría --</option>
        <% categorias.forEach(categoria => { %>
        <option value="<%= categoria.id %>" <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %>><%= categoria.nombre %></option>
        <% }) %>
      </select>
    </div>

    <div class="campo">
      <label>Sitio Web</label>
      <input
        type="url"
        name="url"
        value="<%= grupo.url %>"
        placeholder="Sitio Web"
      />
    </div>

    <div class="campo enviar">
      <input type="submit" value="Guardar Cambios" class="btn btn-rosa" />
    </div>
  </form>
</main>
